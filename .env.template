# ============================================================ #
# --- Runtime ---
PUID=1000                                                      # User ID to run the bot as
PGID=1000                                                      # Group ID to run the bot as
TZ=America/Los_Angeles                                         # Bot's Timezone

# --- Bot Behavior ---
COMMAND_PREFIX=!                                               # Command Prefix to listen for

# --- Logging ---
LOG_LEVEL=INFO                                                 # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FORMAT=human                                               # human (colorized) | json (structured)
LOG_CONSOLE=true                                               # Log to console
RATATOSKR_LOG_FILE=/app/logs/ratatoskr.log                     # Log File Location

# --- Ratatoskr Settings ---
RATATOSKR_GUILD_ID=                                            # Fluxer guild ID
EVENT_CHANNEL_ID=                                              # Channel where events are POSTED
COMMAND_STAFF_ROLE_ID=                                         # Role that can create/manage events
DB_PATH=/data/ratatoskr.db                                     # SQLite database path (container)
